<%= link_to 'New Post', new_admin_post_path, class: "btn btn-primary" %>

<br />

<h2>Listing posts</h2>


<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Title ZH</th>
      <th>Status</th>
      <th>Posted on</th>
    </tr>
  </thead>

  <% @posts.each do |post| %>
    <tr>
      <td><%= link_to post.title_zh, edit_admin_post_path(post), target: '_blank' %></td>
      <td><%= post.status %></td>
      <td><%= post.posted_on.strftime("%F") %></td>
    </tr>
  <% end %>
</table>
